<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>62.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Assegnazione Fatture a Donatore</masterLabel>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__RecordPage</target>
        <target>lightning__HomePage</target>
        <target>lightning__Tab</target> <!-- Rende disponibile il componente come tab -->
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
    <targetConfig targets="lightning__FlowScreen">
        <property name="selectedInvoiceIds" type="String[]" label="Invoice IDs" />
        <property name="sourceReportingYearId" type="String" label="Donatore Sorgente" />
        <property name="targetReportingYearId" type="String" label="Donatore Destinatario" />
        <property name="targetAccountId" type="String" label="Account Donatore Destinatario" />
        <property name="invoiceId" type="String" label="Input Invoice Id" description="Id della fattura da associare" required="false"/>
        <property name="programId" type="String" label="Programma Id" required="false"/>
        <property name="budgetId" type="String" label="Budget Id (Gift Designation)" required="false"/>
        <property name="anno" type="String" label="Anno di riferimento" required="false"/>
    </targetConfig>
</targetConfigs>
</LightningComponentBundle>