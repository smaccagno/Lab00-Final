<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata" fqn="programDynamicOverview">
    <apiVersion>62.0</apiVersion> <!-- Assicurati di usare la versione più recente supportata -->
    <isExposed>true</isExposed>
    <targets>
        <target>lightning__RecordPage</target>
        <target>lightning__AppPage</target>
        <target>lightning__FlowScreen</target> <!-- Questo rende il componente disponibile nei Flows -->
        <target>lightning__HomePage</target>
        <target>lightning__Tab</target> <!-- non supporta proprietà -->
    </targets>
       <targetConfigs>

        <!-- Record Page: nessuna property, il recordId arriva di default -->
        <targetConfig targets="lightning__RecordPage">
            <objects>
                <object>Program</object>
            </objects>
        </targetConfig>

        <!-- AppPage + HomePage: espongo recordId manuale -->
        <targetConfig targets="lightning__AppPage, lightning__HomePage">
            <property name="recordId"
                      type="String"
                      label="Program Record Id"
                      description="Id del Program da mostrare"/>
        </targetConfig>

        <!-- Flow Screen: stesso parametro -->
        <targetConfig targets="lightning__FlowScreen">
            <property name="recordId"
                      type="String"
                      label="Program Record Id"
                      description="Id del Program passato dal Flow"/>
        </targetConfig>

        <!-- Tab: niente property perché non supportate -->

    </targetConfigs>
</LightningComponentBundle>